<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"

    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="403dp"
        android:layout_height="120dp"
        android:background="@color/celeste">

        <ImageView
            android:id="@+id/listImageDoctor"
            android:layout_width="97dp"
            android:layout_height="93dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder_doctor" />

        <TextView
            android:id="@+id/nombreDoctor"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/listImageDoctor"
            android:text="Nombre del doctor"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/apellidoDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreDoctor"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/listImageDoctor"
            android:text="Apellido del doctor"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estadoDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreDoctor"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/apellidoDoctor"
            android:text="estado doctor"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/especialidadDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreDoctor"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-22dp"
            android:layout_toEndOf="@+id/apellidoDoctor"
            android:text="especialidad"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/sedeDoctor"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnAnularCita"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-22dp"
            android:layout_toEndOf="@id/listImageDoctor"
            android:text="Sede"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnAnularCita"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="14dp"
            android:text="Ver Horarios" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>